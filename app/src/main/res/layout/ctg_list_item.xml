<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/main_listitem_card"
    android:layout_marginLeft="@dimen/main_itemlist_side_margin"
    android:layout_marginRight="@dimen/main_itemlist_side_margin"
    android:layout_marginTop="@dimen/main_itemlist_side_margin"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="@dimen/card_elevation">


    <LinearLayout
        android:id="@+id/main_linear_item_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/main_itemlist_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_ctg_item"
            android:layout_width="@dimen/main_itemlist_image_size"
            android:layout_height="@dimen/main_itemlist_image_size"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/lite_grey"
            app:civ_border_color="@color/white"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/name_ctg_item"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:textSize="@dimen/main_itemlist_text_size"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/main_itemlist_side_margin"
            android:layout_marginRight="@dimen/main_itemlist_side_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textColor="@color/color_mountains_dark" />


    </LinearLayout>


</android.support.v7.widget.CardView>