<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/profile_side_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.log_in.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <LinearLayout
        android:layout_width="@dimen/profile_container_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_prf_confirm"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/profile_side_margin"
            android:background="@drawable/bg_rectangle_button"
            android:layout_gravity="center"
            android:padding="@dimen/profile_ptn_conf_padding"
            android:layout_marginTop="@dimen/profile_side_margin"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="@string/confirm_changes" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/profile_side_margin"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivContactItem0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/profile_side_margin"
                android:layout_marginRight="@dimen/profile_side_margin"
                android:src="@drawable/ic_face"
                android:contentDescription="@string/img_prf_phone_conten_description" />

            <EditText
                android:id="@+id/extxt_prf_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_side_margin"
                android:layout_marginStart="@dimen/profile_side_margin"
                android:layout_toEndOf="@id/ivContactItem0"
                android:layout_toRightOf="@id/ivContactItem0"
                android:hint="@string/user_name"
                android:background="@drawable/bg_rectangle_edittext"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/txt_prf_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_side_margin"
                android:layout_marginStart="@dimen/profile_side_margin"
                android:layout_marginTop="@dimen/profile_txt_top_margin"
                android:layout_toEndOf="@id/ivContactItem0"
                android:layout_toRightOf="@id/ivContactItem0"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/profile_side_margin"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivContactItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/profile_side_margin"
                android:layout_marginRight="@dimen/profile_side_margin"
                android:src="@drawable/ic_phone"
                android:contentDescription="@string/img_prf_phone_conten_description" />

            <EditText
                android:id="@+id/extxt_prf_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_side_margin"
                android:layout_marginStart="@dimen/profile_side_margin"
                android:layout_toEndOf="@id/ivContactItem1"
                android:layout_toRightOf="@id/ivContactItem1"
                android:hint="@string/phone"
                android:background="@drawable/bg_rectangle_edittext"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:inputType="phone" />


            <TextView
                android:id="@+id/txt_prf_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_side_margin"
                android:layout_marginStart="@dimen/profile_side_margin"
                android:layout_marginTop="@dimen/profile_txt_top_margin"
                android:layout_toEndOf="@id/ivContactItem1"
                android:layout_toRightOf="@id/ivContactItem1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/profile_side_margin"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivContactItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/profile_side_margin"
                android:layout_marginRight="@dimen/profile_side_margin"
                android:src="@drawable/ic_email"
                android:contentDescription="@string/img_prf_email_conten_description" />

            <EditText
                android:id="@+id/extxt_prf_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_side_margin"
                android:layout_marginStart="@dimen/profile_side_margin"
                android:layout_toEndOf="@id/ivContactItem3"
                android:hint="@string/email"
                android:layout_toRightOf="@id/ivContactItem3"
                android:background="@drawable/bg_rectangle_edittext"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/txt_prf_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_side_margin"
                android:layout_marginStart="@dimen/profile_side_margin"
                android:layout_marginTop="@dimen/profile_txt_top_margin"
                android:layout_toEndOf="@id/ivContactItem3"
                android:layout_toRightOf="@id/ivContactItem3"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/profile_side_margin"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivContactItem5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/profile_side_margin"
                android:layout_marginRight="@dimen/profile_side_margin"
                android:src="@drawable/ic_location"
                android:contentDescription="@string/img_prf_location_conten_description" />

            <TextView
                android:id="@+id/txt_prf_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_side_margin"
                android:layout_marginStart="@dimen/profile_side_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ivContactItem5"
                android:layout_toRightOf="@id/ivContactItem5"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/profile_side_margin"
            android:focusable="true">

            <Button
                android:id="@+id/btn_prf_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_button"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/profile_side_margin"
                android:layout_marginStart="@dimen/profile_side_margin"
                android:textColor="@color/white"
                android:text="@string/edit_profile" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>